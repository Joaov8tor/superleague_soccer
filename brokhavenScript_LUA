-- Criação do GUI principal
local ScreenGui = Instance.new("ScreenGui")
ScreenGui.Name = "BrookhavenHub"
ScreenGui.Parent = game.Players.LocalPlayer.PlayerGui

-- Criação do frame principal do painel
local MainFrame = Instance.new("Frame")
MainFrame.Size = UDim2.new(0, 300, 0, 500)
MainFrame.Position = UDim2.new(0.5, -150, 0.5, -250)
MainFrame.BackgroundColor3 = Color3.fromRGB(30, 30, 30)
MainFrame.Visible = false  -- Inicialmente oculto
MainFrame.Parent = ScreenGui

-- Título do painel
local Title = Instance.new("TextLabel")
Title.Size = UDim2.new(1, 0, 0, 50)
Title.BackgroundColor3 = Color3.fromRGB(40, 40, 40)
Title.Text = "Brookhaven Hub"
Title.TextColor3 = Color3.fromRGB(255, 255, 255)
Title.TextSize = 20
Title.Parent = MainFrame

-- Botão para abrir/fechar o painel
local PanelButton = Instance.new("TextButton")
PanelButton.Size = UDim2.new(0, 100, 0, 40)
PanelButton.Position = UDim2.new(0.5, -50, 0, 10)
PanelButton.BackgroundColor3 = Color3.fromRGB(255, 255, 255)
PanelButton.TextColor3 = Color3.fromRGB(0, 0, 0)
PanelButton.Text = "Painel V1"
PanelButton.Parent = ScreenGui

-- Alterna a visibilidade do painel ao clicar no botão
PanelButton.MouseButton1Click:Connect(function()
    MainFrame.Visible = not MainFrame.Visible
end)

-- Função Power Jump
local function setJumpPower(jumpPower)
    local player = game.Players.LocalPlayer
    if player and player.Character and player.Character:FindFirstChild("Humanoid") then
        player.Character.Humanoid.JumpPower = jumpPower
    end
end

-- TextBox para configurar o Power Jump
local JumpPowerBox = Instance.new("TextBox")
JumpPowerBox.Size = UDim2.new(0, 180, 0, 40)
JumpPowerBox.Position = UDim2.new(0.5, -90, 0, 320)
JumpPowerBox.PlaceholderText = "Altura do Pulo"
JumpPowerBox.Text = ""
JumpPowerBox.BackgroundColor3 = Color3.fromRGB(255, 255, 255)
JumpPowerBox.TextColor3 = Color3.fromRGB(0, 0, 0)
JumpPowerBox.Parent = MainFrame

-- Botão para aplicar o Power Jump
local PowerJumpButton = Instance.new("TextButton")
PowerJumpButton.Size = UDim2.new(0, 180, 0, 40)
PowerJumpButton.Position = UDim2.new(0.5, -90, 0, 370)
PowerJumpButton.Text = "Aplicar Power Jump"
PowerJumpButton.Parent = MainFrame
PowerJumpButton.MouseButton1Click:Connect(function()
    local jumpPower = tonumber(JumpPowerBox.Text)
    if jumpPower then
        setJumpPower(jumpPower)
    else
        warn("Por favor, insira um número válido para a altura do pulo.")
    end
end)

-- Botão para carregar o LocalHub com script externo
local LocalHubButton = Instance.new("TextButton")
LocalHubButton.Size = UDim2.new(0, 180, 0, 40)
LocalHubButton.Position = UDim2.new(0.5, -90, 0, 420)
LocalHubButton.Text = "Carregar LocalHub"
LocalHubButton.Parent = MainFrame
LocalHubButton.MouseButton1Click:Connect(function()
    loadstring(game:HttpGet("https://raw.githubusercontent.com/Joaov8tor/superleague_soccer/refs/heads/main/brokhavenScript_LUA"))()
end)

